            "request": {
                "method": "POST",
                "header": [],
                "body": {
                    "mode": "raw",
                    "raw": "{\n    \"cabecalho\": {\n        \"funcao\": \"9\",\n        \"tipoPedido\": \"001\",\n        \"numeroPedidoComprador\": \"TESTE_POSTMAN_01\",\n        \"cnpjComprador\": \"45543915022231\"\n    },\n    \"itens\": {\n        \"item\": [\n            {\n                \"numeroSequencialItem\": \"0004\",\n                \"codigoProduto\": \"90896187\",\n                \"descricaoProduto\": \"ARROZ TESTE\",\n                \"quantidadePedida\": \"10.00\"\n            }\n        ]\n    }\n} \n",
                    "options": {
